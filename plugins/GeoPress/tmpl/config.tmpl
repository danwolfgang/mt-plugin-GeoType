<input type="hidden" id="default_map_format" name="default_map_format" value="<TMPL_VAR NAME=DEFAULT_MAP_FORMAT>"/>
<input type="hidden" id="default_map_type" name="default_map_type" value="<TMPL_VAR NAME=DEFAULT_MAP_TYPE>"/>
<input type="hidden" id="map_controls_pan" name="map_controls_pan" value="<TMPL_VAR NAME=MAP_CONTROLS_PAN>"/>
<input type="hidden" id="map_controls_map_type" name="map_controls_map_type" value="<TMPL_VAR NAME=MAP_CONTROLS_MAP_TYPE>"/>
<input type="hidden" id="map_controls_zoom" name="map_controls_zoom" value="<TMPL_VAR NAME=MAP_CONTROLS_ZOOM>"/>
<input type="hidden" id="map_controls_overview" name="map_controls_overview" value="<TMPL_VAR NAME=MAP_CONTROLS_OVERVIEW>"/>
<input type="hidden" id="map_controls_scale" name="map_controls_scale" value="<TMPL_VAR NAME=MAP_CONTROLS_SCALE>"/>
<input type="hidden" id="default_add_map" name="default_add_map" value="<TMPL_VAR NAME=DEFAULT_ADD_MAP>"/>
<input type="hidden" id="default_zoom_level" name="default_zoom_level" value="<TMPL_VAR NAME=DEFAULT_ZOOM_LEVEL>"/>
        
            </div>
